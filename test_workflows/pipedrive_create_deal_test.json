{
  "name": "Pipedrive Test - Create Deal",
  "description": "Test workflow to create a new deal in Pipedrive",
  "nodes": [
    {
      "id": "node_1",
      "type": "custom",
      "position": { "x": 100, "y": 100 },
      "data": {
        "type": "manual_trigger",
        "label": "Start",
        "category": "triggers",
        "icon": "Play",
        "config": {}
      }
    },
    {
      "id": "node_2",
      "type": "custom",
      "position": { "x": 300, "y": 100 },
      "data": {
        "type": "pipedrive",
        "label": "Create Test Deal",
        "category": "crm",
        "icon": "Database",
        "config": {
          "apiToken": "YOUR_PIPEDRIVE_API_TOKEN_HERE",
          "resource": "deal",
          "operation": "create",
          "dealTitle": "Test Deal from ctrlchecks",
          "dealValue": 5000,
          "dealCurrency": "USD",
          "status": "open"
        }
      }
    },
    {
      "id": "node_3",
      "type": "custom",
      "position": { "x": 500, "y": 100 },
      "data": {
        "type": "log_output",
        "label": "View Created Deal",
        "category": "output",
        "icon": "FileOutput",
        "config": {
          "message": "Created deal: {{data.title}} (ID: {{data.id}})",
          "level": "info"
        }
      }
    }
  ],
  "edges": [
    {
      "id": "edge_1",
      "source": "node_1",
      "target": "node_2"
