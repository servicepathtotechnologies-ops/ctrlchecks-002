# ============================================
# CtrlChecks Frontend - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values

# ============================================
# REQUIRED - Supabase Configuration
# ============================================
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_PUBLISHABLE_KEY=your-publishable-key-here

# ============================================
# Worker Service Configuration
# ============================================
# Local development: http://localhost:3001
# Production: https://your-worker-domain.com
# Backend API URL (Worker Service)
# Use VITE_API_URL or VITE_PUBLIC_BASE_URL
VITE_API_URL=http://localhost:3001
# Alternative: VITE_PUBLIC_BASE_URL=http://127.0.0.1:3001

# ============================================
# FastAPI Ollama Service Configuration
# ============================================
# Remote: http://ollama.ctrlchecks.ai:8000
# Local: http://localhost:8000
# NOTE: Frontend (Vite) requires VITE_ prefix, backend uses OLLAMA_BASE_URL
VITE_OLLAMA_BASE_URL=http://ollama.ctrlchecks.ai:8000

# ============================================
# Optional - Advanced Configuration
# ============================================
# Use direct backend connection (bypass worker)
# Set to "true" to connect directly to FastAPI backend
VITE_USE_DIRECT_BACKEND=false

# Public base URL (for OAuth redirects, etc.)
VITE_PUBLIC_BASE_URL=http://localhost:5173

# ============================================
# Optional - External API Keys
# ============================================
# HuggingFace API key (for image models if needed)
# VITE_HUGGINGFACE_API_KEY=your-huggingface-key-here
